---
import './Layout.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" data-color-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Личный сайт Максима Тарасова" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/tarmaks-favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="body">
    <slot />
  </body>
</html>
